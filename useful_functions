
def get_parameters(message: str):
    message = message.replace(' ', '').split(',')
    if len(message) == 3:
        parameters = {'trade_pair': message[0].upper(),
                      'leverage': int(message[1]),
                      'margin_value': int(message[2])}
    else:
        parameters = {'leverage': int(message[0]),
                      'margin_value': int(message[1])}
    return parameters


def dict_to_string(dictionary: dict):
    """Функция возвращает текст, сформированный из входящего словаря.
        По сути возвращает текст в виде SQL таблицы."""

    text = ''
    for index in range(len(dictionary[list(dictionary.keys())[0]])):
        string = ', '.join([str(dictionary[key][index]) for key in dictionary.keys()])
        text += string + '\n'

    return text
